@model List<Post>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h1>Index</h1>


@foreach(var post in Model){
<div class="card" style="width: 18rem;">
    <img src="@post.Img" class="card-img-top" alt="...">
        <ul class="list-group list-group-flush">
            <li class="list-group-item text-default">#@post.hashtag.Title</li>
        </ul>
    <div class="card-body">
        <h5 class="card-title">@post.Title</h5>
        <p class="card-text">@post.Body</p>
    </div>
    
    <div class="card-body">
        <a asp-action="Details" asp-controller="Post" class="card-link">Read more ...</a>
            @if (post.UserID == Context.Session.GetInt32("UserId"))
            {
                <a asp-action="Edit" asp-controller="Post" class="card-link">Edit</a>
            }
        </div>
</div>
<br />
}


